# Supabase
NEXT_PUBLIC_SUPABASE_URL="https://your-project-ref.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"

# Database (Supabase PostgreSQL)
# DATABASE_URL uses connection pooler (for serverless/edge functions)
DATABASE_URL="postgresql://postgres.xxxxxx:password@aws-1-eu-north-1.pooler.supabase.com:6543/postgres"

# DIRECT_URL is required for Prisma migrations (direct connection bypassing pooler)
# Find this in Supabase Dashboard > Project Settings > Database > Connection String > Direct Connection
DIRECT_URL="postgresql://postgres.xxxxxx:password@aws-1-eu-north-1.pooler.supabase.com:5432/postgres"

# OpenAI (for caption generation)
OPENAI_API_KEY="your-openai-api-key"

# Stripe (for billing)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="your-stripe-publishable-key"
STRIPE_SECRET_KEY="your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="your-stripe-webhook-secret"

# OAuth Configuration
# The redirect URI that should be configured in Google/Twitter OAuth settings:
# https://your-project-ref.supabase.co/auth/v1/callback
# 
# In Supabase Dashboard, configure:
# 1. Authentication > Providers > Google/Twitter > Add Client ID and Secret
# 2. Authentication > URL Configuration > Add redirect URLs:
#    - http://localhost:3000/auth/callback (for local dev)
#    - https://yourdomain.com/auth/callback (for production)

